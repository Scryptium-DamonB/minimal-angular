{
    "name": "Angular Dev Container",
    "dockerFile": "Dockerfile",
    "forwardPorts": [4200],
    "postCreateCommand": "npm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "Angular.ng-template",
                "ms-azuretools.vscode-docker",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    }
}